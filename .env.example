# SocialPulse AI - Environment Variables
# Copy to .env.local and fill in your values

# ===========================================
# SUPABASE (required)
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ===========================================
# AI API (Gemini)
# ===========================================
GOOGLE_API_KEY=your_google_api_key
GEMINI_API_KEY=your_gemini_api_key

# ===========================================
# LEMONSQUEEZY PAYMENTS
# ===========================================
NEXT_PUBLIC_LEMONSQUEEZY_STORE_ID=your_store_id
LEMONSQUEEZY_API_KEY=your_api_key
LEMONSQUEEZY_WEBHOOK_SECRET=your_webhook_secret

# Product Variant IDs (create in LemonSqueezy)
# Starter Plan: $12/month
NEXT_PUBLIC_LEMONSQUEEZY_STARTER_VARIANT_ID=variant_xxxxx

# Pro Plan: $29/month
NEXT_PUBLIC_LEMONSQUEEZY_PRO_VARIANT_ID=variant_xxxxx

# ===========================================
# APP CONFIGURATION
# ===========================================
NEXT_PUBLIC_APP_URL=https://socialpulse-ai.vercel.app
NEXT_PUBLIC_APP_NAME=SocialPulse AI
